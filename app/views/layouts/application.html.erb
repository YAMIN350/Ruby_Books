<!DOCTYPE html>
<html>
<head>
  <title>Castor</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<% if @current_user %>
  <div style="display: flex">
    <h1>Bienvenue Mr <%= @current_user.name %> !</h1>
    <%= form_tag "/login", method: :delete do %>
      <input type="submit" value="DÃ©connexion"/>
    <% end %></div>
<% end %>
<% if flash[:signup] %>
  <div style="background-color: #1ad027; width: 20%; padding: 10px; border-radius: 10px;"><%= flash[:signup] %></div>
<% end %>
<% if flash[:destroy_all] %>
  <div style="background-color: red; border-radius: 10px; padding: 10px; width: 15%"><%= flash[:destroy_all] %></div>
<% end %>
<% if flash[:success] %>
  <div style="background-color: #1ad027; border-radius: 10px; padding: 10px; width: 15%"><%= flash[:success] %></div>
<% end %>

<% if flash[:info] %>
  <div style="background-color: #9b9877; padding: 10px; width: 20%; border-radius: 10px"><%= flash[:info] %></div>
<% end %>
<%= yield %>
</body>
</html>
